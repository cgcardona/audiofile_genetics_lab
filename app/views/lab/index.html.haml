#AFUIGeneticsLab
  #formCntr
    %form#gaForm
      .row
        .span6
          .row
            %span.span2 Generation Size:
            %span.span1= range_field('generationSize',nil, {:value => '25', :id => 'generationSize', 'min' => '1', 'max' => '200', 'step' => '1'})
          .measure
            %span#genSz 25
            %span creatures per generation
          %hr
          .row
            %span.span2 Generation Count:
            %span.span1= range_field('generationCount',nil, {:value => '25', :id => 'generationCount', 'min' => '1', 'max' => '1000', 'step' => '1'})
          .measure
            %span#genCnt 25
            %span generation(s)
          %hr
          .row
            %span.span2 Mutation Percentage:
            %span.span1= range_field('mutationPercentage',nil, {:value => '20', :id => 'mutationPercentage', 'min' => '0', 'max' => '100', 'step' => '20'})
          .measure
            %span#mutPct 20
            %span percentage mutation rate
          %hr
          .row
            %span.span2 DNA Bit Count:
            %span.span1= range_field('dnaBitCount',nil, {:value => '8', :id => 'dnaBitCount', 'min' => '4', 'max' => '64', 'step' => '4'})
          .measure
            %span#bitCnt 8
            %span bit DNA strands
        .span6
          .row
            %span.span2 Potential Step Count:
            %span.span1= range_field('dnaStepCount',nil, {:value => '3', :id => 'dnaStepCount', 'min' => '1', 'max' => '9', 'step' => '1'})
          .measure
            %span#stpCnt 3
            %span steps
          %hr
          .row
            %span.span2 Scale:
            %span.span1= radio_button_tag 'scales', '1,3,5,6,8,10,11', true, {:id => 'majorScaleSteps'}
            Major Scale
          %hr
          .row
            %span.span2 Key: 
            %span.span1= select_tag "keys", options_for_select([["A", "0"], ["A#", "1"], ["B", "2"], ["C", "3"], ["C#", "4"], ["D", "5"], ["D#", "6"], ["E", "7"], ["F", "8"], ["F#", "9"], ["G", "10"], ["G#", "11"]])
          %hr
          .row
            %span.span2 Octave: 
            %span.span1= select_tag "octave", options_for_select([["0"], ["1"], ["2"], ["3"], ["4"], ["5"], ["6"], ["7"]])
#creatureOutput
  .container
    %div
      %ol#gnDNAList
