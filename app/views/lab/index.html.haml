#AFUIGeneticsLab
  #formCntr
    %form#gaForm
      #lftClm
        %div
          %p.rng
            %span Generation Size:
            %span= range_field('generationSize',nil, {:value => '25', :id => 'generationSize', 'min' => '1', 'max' => '200', 'step' => '1'})
          %p
            %span#genSz 25
            creatures per generation
          %p.rng
            %span Generation Count:
            %span= range_field('generationCount',nil, {:value => '25', :id => 'generationCount', 'min' => '1', 'max' => '1000', 'step' => '1'})
          %p
            %span#genCnt 25
            generation(s)
          %p.rng
            %span Mutation Percentage:
            %span= range_field('mutationPercentage',nil, {:value => '20', :id => 'mutationPercentage', 'min' => '0', 'max' => '100', 'step' => '20'})
          %p
            %span#mutPct 20
            percentage mutation rate
          %p.rng
            %span DNA Bit Count:
            %span= range_field('dnaBitCount',nil, {:value => '8', :id => 'dnaBitCount', 'min' => '4', 'max' => '64', 'step' => '4'})
          %p
            %span#bitCnt 8
            bit DNA strands
      #rghtClm
        %div
          %p.rng
            %span Potential Step Count:
            %span= range_field('dnaStepCount',nil, {:value => '3', :id => 'dnaStepCount', 'min' => '1', 'max' => '9', 'step' => '1'})
          %p
            %span#stpCnt 3
            steps
          %p.rng
            %span Scale:
            %span= radio_button_tag 'scales', '1,3,5,6,8,10,11', true, {:id => 'majorScaleSteps'}
            Major Scale
          %p.rng
            %span Key: 
            =select_tag "keys", options_for_select([["A", "0"], ["A#", "1"], ["B", "2"], ["C", "3"], ["C#", "4"], ["D", "5"], ["D#", "6"], ["E", "7"], ["F", "8"], ["F#", "9"], ["G", "10"], ["G#", "11"]])
          %p.rng
            %span Octave: 
            =select_tag "octave", options_for_select([["0"], ["1"], ["2"], ["3"], ["4"], ["5"], ["6"], ["7"]])
#creatureOutput
  .container
    %div
      %ol#gnDNAList
